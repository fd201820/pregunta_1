<script>

//arreglos
var cuadross=[];
var tablero;
var zz=[];
var conteo=[];
//variables numericas
var ab;
var bc;
var cd;
var i;
var j;
var k;


var ntamano;
var niter;
//botones

var bttamano;
var btiteraciones;
var btcomen;
//variables i es filas y j es columnas
var i=1;
var j=1;

var abx;
var xz;
var rk;
tablero=document.getElementById("chessboard"); 
ntamano=document.getElementById("itamano");
bttamano=document.getElementById("btamano");
btiteraciones=document.getElementById("biteraciones");
niter=document.getElementById("iteraciones");

btcomen=document.getElementById("comen");


btcomen.onclick=function() {progreso(); };

//uno
bttamano.onclick=function() { 

ab=ntamano.value;
bc=ab*80;
tablero.style.height=bc;
tablero.style.width=bc;
ab=parseInt(ab)+1;
agregarcuadros();   
                            };
//dos   
btiteraciones.onclick=function() {        rk=niter.value;
                                          rk=parseInt(rk)+1;
							abx=300;			
							for(xz=1;xz<rk;xz++)
							{abx=parseInt(abx)+600;
							setTimeout(tiempo1,abx);}	  };
								  

								  
function tiempo1()
{escaneo();
 setTimeout(progreso,100);}



								  
function agregarcuadros ()

{
   //crear y agregar cuadros,variable boolean y variable de conteo de condicion
for (var i=1;i<ab;i++)
{  cuadross[i]=[];  
   zz[i]=[];
   conteo[i]=[];   }

//agrega caracteristicas a los cuadros y la funcion de seleccionar color
for (i=1;i<ab;i++)
{
     for (j=1;j<ab;j++)
       {   
	    zz[i][j]=true; 
          conteo[i][j]=0;		
	    cuadross[i][j]=document.createElement("div");
          cuadross[i][j].className="white";
	    cuadross[i][j].style.backgroundColor="white";
	    cuadross[i][j].id="cu"+i+j;
	    cuadross[i][j].ni=i;
	    cuadross[i][j].nj=j;	
          cuadross[i][j].onclick=function() {
            
		
		if(zz[this.ni][this.nj])	
		{this.style.backgroundColor="black";zz[this.ni][this.nj]=false;}
		else
		{this.style.backgroundColor="white";zz[this.ni][this.nj]=true;}
		
		}
		  
          tablero.appendChild(cuadross[i][j]); 		
	}
}

}

//hace un barrido a todos los cuadros y realiza el conteo de la condicion

function escaneo()

{   
for (i=1;i<ab;i++)
{    for (j=1;j<ab;j++){  conteo[i][j]=0;}       }


          var c1;
	    var c2;
		
          var d1;
	    var d2;	


for (i=1;i<ab;i++)
{
     for (j=1;j<ab;j++)
       {   
	    
	
	    c1=cuadross[i][j].ni;
	    c2=cuadross[i][j].nj;	
	    
	    d1=cuadross[i][j].ni;
	    d2=cuadross[i][j].nj;
	    
	    for (k=1;k<9;k++)
		{

		 if(k==1)
		 {  d1=parseInt(d1)-1;
		    d2=parseInt(d2)-1;
		 
		  if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
		    d1=cuadross[i][j].ni;
	          d2=cuadross[i][j].nj;	
		  
		  }
		  
		  if(k==2)
		  
		  {   d1=parseInt(d1)-1;
		      
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==3)
		  
		  {   d1=parseInt(d1)-1;
		     d2=parseInt(d2)+1;
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==4)
		  
		  {   
		      d2=parseInt(d2)-1;
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==5)
		  
		  {   
		     d2=parseInt(d2)+1;
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==6)
		  
		  {  d1=parseInt(d1)+1;
		     d2=parseInt(d2)-1;
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==7)
		  
		  {   d1=parseInt(d1)+1;
		     
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		  if(k==8)
		  
		  {   d1=parseInt(d1)+1;
		      d2=parseInt(d2)+1;
               if(d1==ab||d2==ab)
		   {}
		   else
		   {
		    if (d1==0 || d2==0)
			{}
		    else
			{ if(cuadross[d1][d2].style.backgroundColor=="black")
			 
		        {conteo[c1][c2]=parseInt(conteo[c1][c2])+1;}
		      }	  
		    }
			
		  d1=cuadross[i][j].ni;
	        d2=cuadross[i][j].nj;	
		  }
		  
		
		}
		    
	 
		
          
	}


	
}	  


}

//hace un barrido a todos los cuadros, lee el valor de la condicion y aplica la condicion con el 
//cambio de color

function progreso()

{

for (i=1;i<ab;i++)
{
     for (j=1;j<ab;j++)
    {
 if(cuadross[i][j].style.backgroundColor=="black")
 {  
   if (conteo[i][j]==2 ||conteo[i][j]==3)
   {cuadross[i][j].style.backgroundColor="black";}
   else
   {cuadross[i][j].style.backgroundColor="white";}
 }  
  if(cuadross[i][j].style.backgroundColor=="white")
  { 
   if (conteo[i][j]==3)
   {cuadross[i][j].style.backgroundColor="black";}
   else
   {cuadross[i][j].style.backgroundColor="white";}
  }
  
  }
  }
  
 

}

